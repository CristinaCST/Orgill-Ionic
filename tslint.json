{
  "rules": {
    "array-type": [true, "array"],
    "indent": {"options": ["spaces", 2]},
    "interface-name": false,
    "jsdoc-format": [true, "check-multiline-start"],
    "max-classes-per-file": false,
    "max-line-length": false,
    "member-ordering": false, 
    "no-bitwise": false,
    "no-namespace": false,
    "no-string-literal": false,
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "quotemark": {"options": ["single", "jsx-double"]},
    "unified-signatures": false,
    "variable-name": {"options": ["ban-keywords"]},
    "whitespace": { "options": ["check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-rest-spread", "check-type", "check-type-operator", "check-preblock"] },

    "ban-comma-operator": true,
    "deprecation": { "options": true, "severity": "warning" },
    "encoding": true,
    "linebreak-style": [true, "LF"],
    "no-duplicate-imports": true,
    "no-duplicate-switch-case": true,
    "no-import-side-effect": true,
    "no-irregular-whitespace": true,
    "no-non-null-assertion": true,
    "no-sparse-arrays": true,
    "prefer-conditional-expression": true,
    "space-within-parens": 0,

    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-inner-declarations": true,
    "no-invalid-regexp": true,
    "no-invalid-template-strings": true,
    "no-multi-spaces": true,
    "no-regex-spaces": true,
    "no-unexpected-multiline": true,
    "object-curly-spacing": [true, "always"],
    "valid-typeof": true,

    "align": [true, "parameters", "statemets", "members", "elements"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "one-variable-per-declaration": true,
    "forin": true,
    "no-conditional-assignment": true,
    "no-empty-interface": true,
    "no-redundant-jsdoc": true,
    "no-unnecessary-type-assertion": true,
    "prefer-object-spread": true,
    "strict-type-predicates": true,
    "await-promise": true,
    "strict-boolean-expressions": [true, "allow-string", "allow-null-union", "allow-undefined-union", "allow-boolean-or-undefined"],
    "typedef": [true, "property-declaration", "member-variable-declaration"],
    "prefer-for-of": false,
    "no-empty": [true, "allow-empty-functions", "allow-empty-catch"],
    "eofline":false,
    "no-consecutive-blank-lines": [true, 2],
    "no-unnecessary-initializer":false, 
    "ordered-imports": [
      true,
      {
        "named-imports-order": "any",
        "import-sources-order": "any",
        "grouped-imports-order": "true"
      }
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ],
    "no-inferrable-types":false,
    "no-floating-promises":false,
    "unnecessary-constructor":true,
    "static-this":true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-this-assignment": true,
    "no-return-await": true,
    "no-shadowed-variable":true,
    "no-null-keyword": true,
    "no-null-undefined-union": true,
    "curly": true,
    "no-eval": true,
    "member-access": true,
    "no-duplicate-variable": true,
    "no-unused-variable": [
      true
    ],
    "semicolon": [true, "always"],
    "no-console": false,
    "triple-equals": [true,"allow-null-check","allow-undefined-check"]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "baseUrl": "./src",
  "paths": {
    "@app/env": [
      "environments/environment"
    ]
  }
}